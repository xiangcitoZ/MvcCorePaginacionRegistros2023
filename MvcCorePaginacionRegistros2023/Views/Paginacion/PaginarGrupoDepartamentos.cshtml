@model List<Departamento>

@{
    int numeroregistros = (int)ViewData["REGISTROS"];
    int numeropagina = 1;
}

@{
    ViewData["Title"] = "PaginarGrupoDepartamento";
}

<h1>PaginarGrupoVistaDepartamento</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {

        <li class="list-group-item list-group-item-danger">
            <a asp-controller="Paginacion"
           asp-action="PaginarGrupoDepartamentos"
           asp-route-posicion="@i">
                @numeropagina
            </a>
        </li>

        numeropagina += 1;
    }

</ul>

<hr />
@Html.Raw(ViewData["LINKS"])
<hr />


<table class="table table-warning">
    <thead>
        <tr>
            <th>
                IdDepartamento
            </th>
            <th>
               Nombre
            </th>
            <th>
               Localidad
            </th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.IdDepartamento
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.Localidad
                </td>
              

            </tr>
        }
    </tbody>
</table>
